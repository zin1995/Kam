<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ContentController">
   <children>
      <HBox layoutX="10.0" layoutY="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <StackPane alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS">
                     <StackPane.margin>
                        <Insets left="70.0" right="14.0" />
                     </StackPane.margin>
                     <content>
                        <SplitPane fx:id="splitPane" nodeOrientation="LEFT_TO_RIGHT" />
                     </content>
                     <padding>
                        <Insets top="-1.0" />
                     </padding>
                  </ScrollPane>
                  <VBox maxWidth="70.0" minWidth="70.0" nodeOrientation="LEFT_TO_RIGHT">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Глубина" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
                        <Slider fx:id="depthSlider" blockIncrement="0.0" majorTickUnit="10.0" min="1.0" minorTickCount="1" snapToTicks="true" value="10.0" />
                        <ScrollPane fx:id="depthScroll" fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS" style="-fx-background-insets: 0;" vbarPolicy="NEVER">
                           <content>
                              <AnchorPane fx:id="depthPane" maxWidth="70.0" minWidth="70.0" />
                           </content>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <ScrollBar fx:id="vScroll" orientation="VERTICAL" StackPane.alignment="TOP_RIGHT" />
               </children>
            </StackPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
